<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <TextView
        android:id="@+id/textViewRule1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Rules of the Hangman Game:"
        android:gravity="center"
        android:textColor="@color/colorPrimaryDark"
        android:textSize="12pt"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.184" />

    <TextView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:text="You try to guess a word.\n
The number of letters are given. Guess one letter
and try to solve the riddle before you run out of guesses.\n
You are allowed to solve the word at any time by typing the whole word."
        android:layout_marginTop="180dp"
        android:layout_marginLeft="10dp"
        android:layout_marginRight="10dp"
        android:layout_marginBottom="80dp"
        android:gravity="center"/>

</android.support.constraint.ConstraintLayout>